<div class="container">
  <div class="frame">
    <div class="search-card">
      <h5 class="mb-3" style="font-family:'Playfair Display',serif;">Encontrá tu mesa</h5>

      <%= form_with url: checkins_path, method: :post, local: true do %>
        <div class="row g-2 align-items-center">
          <div class="col-12 col-md-9">
            <label class="form-label">Tu nombre o apellido</label>
            <%= text_field_tag :q, params[:q], class: "form-control form-control-lg",
                  placeholder: "Ej: Juan Pérez", autofocus: true, required: true %>
          </div>
          <div class="col-12 col-md-3 d-grid">
            <label class="form-label d-none d-md-block">&nbsp;</label>
            <%= submit_tag "Buscar mesa", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      <% end %>

      <% if flash[:alert].present? %>
        <div class="alert alert-warning mt-3 mb-0"><%= flash[:alert] %></div>
      <% end %>
    </div>
  </div>
</div>
