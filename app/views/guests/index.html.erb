<div class="container">
  <div class="frame">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h2 class="mb-0" style="font-family:'Playfair Display',serif;">Invitados</h2>
        <div class="muted">Total: <%= @guests.size %></div>
      </div>
      <div class="d-flex gap-2">
        <%= link_to "Agregar invitado", new_guest_path, class: "btn btn-primary" %>
        <%= link_to "Mesas", tables_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>

    <div class="search-card">
      <div class="table-responsive">
        <table class="table align-middle">
          <thead>
            <tr>
              <th>Nombre</th>
              <th class="text-center">Mesa</th>
              <th class="text-end">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @guests.each do |g| %>
              <tr>
                <td>
                  <strong><%= g.name %></strong>
                </td>
                <td class="text-center">
                  <% if g.table %>
                    <span class="badge text-bg-secondary">Mesa <%= g.table.number %></span>
                  <% else %>
                    <span class="badge text-bg-light text-muted">Sin asignar</span>
                  <% end %>
                </td>
                <td class="text-end">
                  <div class="btn-group">
                    <%= link_to "Ver", g, class: "btn btn-sm btn-outline-secondary" %>
                    <%= link_to "Editar", edit_guest_path(g), class: "btn btn-sm btn-outline-secondary" %>
                    <%= button_to "Eliminar", g, method: :delete, form: { data: { turbo: false } },
                          class: "btn btn-sm btn-outline-danger",
                          data: { confirm: "¿Seguro que querés eliminar a #{g.name}?" } %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @guests.blank? %>
        <div class="alert alert-light mb-0">Aún no hay invitados. Empezá cargando el primero.</div>
      <% end %>
    </div>
  </div>
</div>
