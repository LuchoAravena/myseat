<div class="container">
  <div class="frame">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0" style="font-family:'Playfair Display',serif;">Editar mesa <%= @table.number %></h2>
      <div class="d-flex gap-2">
        <%= link_to "Ver", @table, class: "btn btn-outline-secondary" %>
        <%= link_to "Listado", tables_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>

    <div class="search-card">
      <%= render "form", table: @table %>
    </div>
  </div>
</div>
