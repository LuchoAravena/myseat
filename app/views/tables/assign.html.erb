<!-- app/views/tables/assign.html.erb -->
<div class="container">
  <div class="frame">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 style="font-family:'Playfair Display',serif;">Mesa <%= @table.number %></h2>
      <span class="badge text-bg-secondary">
        Ocupados: <%= @table.used_seats %> / <%= @table.capacity %>
      </span>
    </div>

    <div class="row g-4">
      <!-- Columna: Agregar invitado -->
      <div class="col-12 col-md-6">
        <div class="search-card">
          <h5 class="mb-3" style="font-family:'Playfair Display',serif;">Agregar invitado a esta mesa</h5>

          <% if @unassigned.any? %>
            <%= form_with url: add_guest_table_path(@table), method: :post, local: true, class: "row g-2" do %>
              <div class="col-12">
                <label class="form-label">Invitado sin mesa</label>
                <%= select_tag :guest_id,
                      options_from_collection_for_select(@unassigned, :id, :name),
                      class: "form-select form-select-lg" %>
              </div>
              <div class="col-12 d-grid">
                <%= submit_tag "Agregar", class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>
          <% else %>
            <div class="alert alert-info mb-0">
              No hay invitados sin mesa. Cargá más invitados o quitá de otra mesa.
            </div>
          <% end %>
        </div>
      </div>

      <div class="col-12 col-md-6">
        <div class="search-card">
          <h5 class="mb-3" style="font-family:'Playfair Display',serif;">Asignados a Mesa <%= @table.number %></h5>

          <% if @assigned.any? %>
            <ul class="list-group">
              <% @assigned.each do |g| %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <strong><%= g.name %></strong>
                    <% if g.notes.present? %>
                      <div class="small text-muted"><%= g.notes %></div>
                    <% end %>
                  </div>
                  <%= button_to "Quitar", remove_guest_table_path(@table, guest_id: g.id),
                        method: :delete, class: "btn btn-outline-secondary btn-sm" %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <div class="alert alert-light mb-0">No hay invitados asignados todavía.</div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="mt-4 d-flex gap-2">
      <%= link_to "Volver a Mesas", tables_path, class: "btn btn-outline-secondary" %>
      <%= link_to "Invitados", guests_path, class: "btn btn-outline-secondary" %>
    </div>

    <% if flash[:alert].present? %>
      <div class="alert alert-warning mt-3 mb-0"><%= flash[:alert] %></div>
    <% end %>
  </div>
</div>
